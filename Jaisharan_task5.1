import RPi.GPIO as GPIO
import time
from tkinter import *
import tkinter.font
win = Tk()
win.title("LED Toggler")
myFont = tkinter.font.Font(family = 'Helvetica', size = 12, weight = "bold")
GPIO.setmode(GPIO.BCM)
GPIO.setwarnings(False)
GPIO.setup(4,GPIO.OUT,initial=GPIO.LOW)
GPIO.setup(2,GPIO.OUT,initial=GPIO.LOW)
GPIO.setup(15,GPIO.OUT,initial=GPIO.LOW)
def ledToggle():
    while 1:
        GPIO.output(4, 1)
        time.sleep(1)
        GPIO.output(4, 0)
        time.sleep(1)
        pass
def ledToggle1():
    while 1:
        GPIO.output(15, 1)
        time.sleep(1)
        GPIO.output(15, 0)
        time.sleep(1)
        pass
def ledToggle2():
    while 1:
        GPIO.output(2, 1)
        time.sleep(1)
        GPIO.output(2, 0)
        time.sleep(1)
        pass

def close():
    win.destroy()
ledButton = Button(win, text='Red', font=myFont, command=ledToggle, bg='bisque2', height=1, width=24)
ledButton.grid(row=0,column=0)
ledButton1 = Button(win, text='Green', font=myFont, command=ledToggle1, bg='bisque2', height=1, width=24)
ledButton1.grid(row=1,column=0)
ledButton2 = Button(win, text='Gold', font=myFont, command=ledToggle2, bg='bisque2', height=1, width=24)
ledButton2.grid(row=2,column=0)
exitButton = Button(win, text='Exit', font=myFont, command=close, bg='bisque2', height=1, width=6)
exitButton.grid(row=4, column=0)
win.protocol("WM_DELETE_WINDOW", close) 

win.mainloop()
